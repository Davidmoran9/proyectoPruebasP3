{
  "name": "biblioteca-proyecto",
  "version": "1.0.0",
  "private": true,
  "description": "Sistema de biblioteca con backend Node.js y frontend Angular",
  "scripts": {
    "install:backend": "cd backend-node && npm install",
    "install:frontend": "cd frontend-angular/frontend-angular && npm install",
    "install:all": "npm run install:backend && npm run install:frontend",
    "start:backend": "cd backend-node && npm start",
    "start:frontend": "cd frontend-angular/frontend-angular && npm start",
    "test:backend": "cd backend-node && npm test",
    "test:frontend": "cd frontend-angular/frontend-angular && npm test",
    "test:all": "npm run test:backend && npm run test:frontend",
    "lint:backend": "cd backend-node && npm run lint",
    "build:frontend": "cd frontend-angular/frontend-angular && npm run build",
    "performance:backend": "cd backend-node && npm run performance:all",
    "ci": "npm run install:all && npm run lint:backend && npm run test:all && npm run build:frontend",
    "test": "jest"
  },
  "workspaces": [
    "backend-node",
    "frontend-angular/frontend-angular"
  ],
  "devDependencies": {
    "concurrently": "^8.2.2",
    "eslint": "^10.0.0",
    "supertest": "^7.2.2",
    "jest": "^29.0.0"
  },
  "author": "",
  "license": "ISC"
}
